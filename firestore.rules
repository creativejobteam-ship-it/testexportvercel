rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User Data (Strictly authenticated owner only)
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Briefs (Public read/update for magic links, delete restricted to admins)
    match /briefs/{briefId} {
      // Allow reading and updating (answering) if you have the ID (Magic Link logic)
      allow read, update: if true;
      
      // Allow creation by anyone (from the dashboard or public link generation)
      allow create: if true;
      
      // ONLY authenticated users can delete briefs
      allow delete: if request.auth != null;
    }
  }
}